<div class="contents">
  <div class="index-title">

    <p class="under-bar-3px index-title-text">スケジュール詳細</p>

    <ul class="index-list under-bar-3px bold">
      <li>title</li>
      <li>start date</li>
      <li>end date</li>
      <li>all day</li>
      <li class="li-updated_at">updated at</li>
    </ul>

    <% if @post.all_day %>
      <% all_day = "○" %>
    <% else %>
      <% all_day = "-" %>
    <% end %>
    
    <ul class="index-list under-bar-1px">
      <li><%= @post.title %></li>
      <li><%= @post.start_date %></li>
      <li><%= @post.end_date %></li>
      <li><%= all_day %></li>
      <li class="li-updated_at"><%= @post.updated_at.to_s(:datetime_jp) %></li>
    </ul>

    <div class="index-list under-bar-1px index-show-text">
      <p><%= @post.text %></p>
    </div>

    <div class="show-edit">
      <ul class="show-edit-list">
        <li><%= link_to "編集", :edit_post, class: "links" %></li>
        <li><%= link_to "削除", @post, method: :delete, data:{confirm: "本当に削除しますか？"}, class: "links" %></li>
      <ul>
    </div>

  </div>
